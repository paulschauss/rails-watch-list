<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1568876694728-451bbf694b83?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2232&q=80);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-gradient" %>

<% if @list.bookmarks.any? %>
<div class="banner">
  <div class="card-movie col-6">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <div class="card-movie-infos">
      <% @list.bookmarks.each do |bookmark| %>
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.movie.overview %></p>
        <p><%= bookmark.comment %></p>
        <p><%= link_to "Delete",
            bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
          </p>
      <% end %>
      <h2 class="card-movie-pricing">Â£99.99</h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
</div>
<% end %>
